    <div class="porterbuddy-widget-description">
        <?php echo $this->getDescription() ?>
    </div>

    <?php if ($this->showTimeslots()): ?>
        <div class="porterbuddy-widget-date-selectors">
            <a href="javascript: void(0);" class="porterbuddy-widget-date-selector prev-date">
                <span><?php echo $this->__('Previous Day') ?></span>
            </a>
            <span id="selected-date" class="porterbuddy-widget-selected-date selected-date">
                <!--placeholder-->
            </span>
            <a href="javascript: void(0);" class="porterbuddy-widget-date-selector next-date">
                <span><?php echo $this->__('Next Day') ?></span>
            </a>
