    <input name="shipping_method_porterbuddy" type="radio" value="" id="s_method_porterbuddy" class="radio"/>
    <label for="s_method_porterbuddy">
        <?php echo $this->getTitle() ?>
    </label>
    <div class="porterbuddy-widget-logo-wrapper">
        <img src="<?php echo $this->getSkinUrl('images/logo_porterbuddy.svg') ?>" class="image porterbuddy-widget-logo" width="118" height="24" alt="<?php echo $this->escapeHtml($this->__('Porterbuddy')) ?>" />
