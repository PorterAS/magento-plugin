            <input type="checkbox" value="1" id="porterbuddy_leave_doorstep"
                <?php if ($this->getLeaveDoorstep()) echo ' checked="checked"' ?> />
            <?php echo $this->getLeaveDoorstepText() ?>
        </label>
    </div>
    <div class="porterbuddy-widget-comment">
        <textarea id="porterbuddy_comment"
              placeholder="<?= $this->escapeHtml($this->getCommentText()) ?>"
